<div class="container">
 	<div class="row">
 		<div class="col-md-10 col-md-offset-1">

 			<h4><span style="background-color: silver;">
 				注文情報確認</span>
 			</h4>
 		</div>


 		<table border='1' class="cart-table col-md-12" style="float: left;">
 			<thead>
 				<tr>
 					<th style="width:100px; height: 70px; padding:10px;">注文日</th>
 					<th style="width:300px; padding:10px;">配送先</th>
 					<th style="width:100px; padding:10px;">注文商品</th>
					<th style="width:100px; padding:10px;">支払金額</th>
					<th style="width:100px; padding:10px;">注文詳細</th>
 				</tr>
 			</thead>

 			<% @orders.each do |order| %>
 			<tbody>
 				<tr>
 					<td><%= order.created_at %></td>
 					<td>
 						<%= order.zipcord %><br>
 						<%= order.address %><br>
 						<%= order.name %></br>
 					</td>
 					<td></td>
 					<td><%= order.total_payment %></td>
 				</tr>
 			</tbody>
 			<% end %>
 		</table>
 	</div>
</div>