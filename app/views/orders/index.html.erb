<div class="container">
 	<div class="row">

 		<div class="col-md-10 col-md-offset-1">
 			<h4>
 				<span>注文履歴一覧</span>
 			</h4>
 		</div>


 		<table border='1' class="order_cart_table col-md-12">
 			<thead>
 				<tr>
 					<th>注文日</th>
 					<th>配送先</th>
					<th>支払金額</th>
					<th>注文詳細</th>
 				</tr>
 			</thead>

 			<% @orders.each do |order| %>
	 			<tbody>
	 				<tr>
	 					<td><%= order.created_at.strftime('%Y/%m/%d') %></td>

	 					<td>
	 						<%= order.zipcord %><br>
	 						<%= order.address %><br>
	 						<%= order.name %></br>
	 					</td>

	 					<td><%= order.total_payment %></td>

	 					<td><%= link_to '表示する', order_path(order.id), class: "btn btn-primary btn-md" %></td>
	 				</tr>
	 			</tbody>
 			<% end %>
 		</table>
 	</div>
</div>