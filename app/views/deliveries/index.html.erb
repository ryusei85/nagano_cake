<div class="container">
 	<div class="row">
 		<div class="col-md-10 col-md-offset-1">

 			<h4><span style="background-color: silver;">
 				配送先登録/一覧</span>
 			</h4>
 		</div>

 		<div class="col-md-12">
 			<table class="deli-table">
 				<tbody>
 					<%= form_for(@delivery, url: deliveries_path) do |f| %>
 					<tr>
 						<th><%= f.label :zipcord, "郵便番号(ハイフンなし)" %></th>
 						<td><%= f.text_field :zipcord %></td>
 						<td></td>
 					</tr>
 					<tr>
 						<th><%= f.label :address, "住所" %></th>
 						<td><%= f.text_field :address, size: "50x10" %></td>
 						<td></td>
 					</tr>
 					<tr>
 						<th><%= f.label :name, "宛名" %></th>
 						<td><%= f.text_field :name %></td>
 						<td><%= f.submit '登録する', class: "deli-btn btn btn-success btn-md" %></td>
 					</tr>
 					<% end %>
 				</tbody>
 			</table>
 		</div>

 		<div class="col-md-12" style="margin-top: 100px;">
 			<div class="deli-table-2">
 				<table border="1" style="width: 700px;">
 					<thead>
 						<tr>
 							<th style="width: 100px; height: 40px;">郵便番号</th>
 							<th style="width: 300px;">住所</th>
 							<th style="width: 100px;">宛名</th>
 							<th colspan="c" class="3"></th>
 						</tr>
 					</thead>

 					<tbody>
 						<% @deliveries.each do |delivery| %>
 						<tr>
 							<td style="height: 40px;"><%= delivery.zipcord %></td>
 							<td><%= delivery.address %></td>
 							<td><%= delivery.name %></td>
 							<td style="text-align: center;">
 								<%= link_to '編集する', edit_delivery_path(delivery.id), class: "btn btn-primary btn-md" %>
 								<%= link_to '削除する', delivery_path(delivery.id), class: " btn btn-md btn-danger", method: :delete, "data-confirm" => "本当に消しますか？" %>
 							</td>
 						</tr>
 						<% end %>
 					</tbody>
 				</table>
 			</div>
 		</div>



 	</div>
</div>