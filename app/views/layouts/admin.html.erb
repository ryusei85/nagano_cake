<!DOCTYPE html>
<html>
  <head>
    <title>nagano_cake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'admins', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarEexample3">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">
            ながのCAKE
          </a>
        </div>

        <div class="collapse navbar-collapse" id="navbarEexample3">
          <ul class="nav navbar-nav navbar-right ">

            <% if admin_signed_in? %>
              <li><%= link_to "商品一覧", admin_products_path %></li>
              <li><%= link_to "会員一覧", admin_products_path %></li>
              <li><%= link_to "注文履歴一覧", admin_products_path %></li>
              <li><%= link_to "ログアウト", destroy_admin_session_path, method: :delete %></li>
            <% else %>
              <li><a href="home/about">about</a></li>
              <li><%= link_to "商品一覧", admin_products_path %></li>
              <li><%= link_to "新規登録", new_admin_registration_path %></li>
              <li><%= link_to "ログイン", new_admin_session_path %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <%= yield %>

  </body>

</html>