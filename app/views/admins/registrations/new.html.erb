
<div class="container">
    <div class="row">

        <div class="col-md-12 col-md-offset-3">
            <h4>
              <span>管理者新規登録</span>
            </h4>
        </div>

        <div class="col-md-5 col-md-offset-3">

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "admins/shared/error_messages", resource: resource %>

            <table class="table">
              <tbody>
                <tr>
                  <th><%= f.label :メールアドレス %></th>
                  <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
                </tr>

                <tr>
                  <th>
                      <%= f.label :パスワード %>
                      <% if @minimum_password_length %>
                      <em>(<%= @minimum_password_length %> 文字〜)</em>
                      <% end %>
                  </th>
                  <td><%= f.password_field :password, autocomplete: "new-password" %></td>
                </tr>

                <tr>
                  <th><%= f.label :パスワード再確認 %></th>
                  <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
                </tr>
              </tbody>
            </table>

            <div class="actions">
              <%= f.submit "新規登録", class:"btn bg-primary" %>
            </div>
          <% end %>

          <%= render "admins/shared/links"%>
        </div>
    </div>
</div>
