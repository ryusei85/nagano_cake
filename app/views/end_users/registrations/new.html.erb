<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-2">

      <h4><span style="background-color: silver;">
        新規会員登録</span>
      </h4>

    </div>

    <div class="col-md-11 col-md-offset-1">

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "end_users/shared/error_messages", resource: resource %>

            <table class="table">
              <tbody>
                <tr>
                  <th><%= f.label :名前 %></th>
                  <td>
                      <%= f.text_field :last_name %>
                      <%= f.text_field :first_name %>
                  </td>
                </tr>
                <tr>
                  <th><%= f.label :名前 %></th>
                  <td>
                      <%= f.text_field :last_name_kana %>
                      <%= f.text_field :first_name_kana %>
                  </td>
                </tr>
                <tr>
                  <th><%= f.label :email, "メールアドレス" %></th>
                  <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
                </tr>
                <tr>
                  <th><%= f.label :zipcord, "郵便番号(ハイフンなし)" %></th>
                  <td><%= f.number_field :zipcord %></td>
                </tr>
                <tr>
                  <th><%= f.label :address, "住所" %></th>
                  <td><%= f.text_field :address, size: '50x10' %></td>
                </tr>
                <tr>
                  <th><%= f.label :phone_number, "電話番号(ハイフンなし)" %></th>
                  <td><%= f.number_field :phone_number %></td>
                </tr>
                <tr>
                  <th>パ<%= f.label :password, "パスワード" %></th>
                  <td><%= f.password_field :password, autocomplete: "new-password" %></td>
                </tr>
                <tr>
                  <th><%= f.label :password_confirmation, "パスワード確認用" %></th>
                  <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
                </tr>

              </tbody>
            </table>


            <div class="actions" style="text-align: center;">
              <%= f.submit "新規登録", class: "btn btn-primary btn-lg" %>
            </div>
          <% end %>
    </div>

    <div class="col-md-11 col-md-offset-1">

      <h4><span style="background-color: silver;">
        既に登録済みの方</span>
      </h4>

          <p><%= render "end_users/shared/links" %>からログインしてください。</p>

    </div>
  </div>
</div>
