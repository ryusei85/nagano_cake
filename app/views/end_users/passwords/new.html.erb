<div class="container">
    <div class="row">

        <div class="col-md-9 col-md-offset-3">
            <h4>
              <span>Forgot your password?</span>
            </h4>
        </div>

        <div class="col-md-8 col-md-offset-4">
			<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
			  <%= render "end_users/shared/error_messages", resource: resource %>

			  <div class="field">
			    <%= f.label :email %>
			    <%= f.email_field :email, autofocus: true, autocomplete: "email", size: "30x10", style: "margin: 10px;" %>
			  </div>
		</div>

        <div class="col-md-12">
            <div class="actions">
			    <%= f.submit "Send me reset password instructions" %>
			  </div>
			<% end %>
		</div>

		<div class="col-md-6 col-md-offset-3">
			<%= link_to "ログイン", new_session_path(resource_name) %> | <%= link_to "新規登録", new_registration_path(resource_name) %>
		</div>
	</div>
</div>
